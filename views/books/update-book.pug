extends ../layout

block content

    h1 Update Book
    form(action=`/books/${book.id}` method="post")
        
        p
            label(for='title') Title
            input#title(name='title' type='text')
        p
            label(for='author') Author
            input#author(name='author' type='text')
        p
            label(for='genre') Genre
            input#genre(name='genre' type='text')
        p
            label(for='year') Year
            input#year(name='year' type='text')
        p
            input(type='submit' value='Update Book')
        
        p
            a.button(href=`/books/${book.id}/delete`) Delete Book

        p
            a.button(href='/') Home
        